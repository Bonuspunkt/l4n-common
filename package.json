{
  "name": "l4n-common",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "4.6.1",
    "eslint-plugin-prettier": "^2.2.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.6.1",
    "tap": "^10.7.2"
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore  .",
    "test": "tap lib/**.test.js --100"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 2017,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": false
      }
    },
    "extends": [
      "eslint:recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "printWidth": 100,
          "singleQuote": true,
          "tabWidth": 4,
          "trailingComma": "all"
        }
      ]
    }
  },
  "author": "Bonuspunkt",
  "license": "MIT"
}
